        meta iifname "xenbr3" ip saddr 10.0.30.40 tcp sport 5432 accept  # R√©ponse VM4 ‚Üí VM2
        meta iifname "xenbr2" ip daddr 10.0.30.50 tcp dport 5432 accept  # VM3 ‚Üí VM5
        meta iifname "xenbr3" ip saddr 10.0.30.50 tcp sport 5432 accept  # R√©ponse VM5 ‚Üí VM3

        # --- ACC√àS INTERNET POUR LES VMs (HTTP/HTTPS/MAJ) ---
