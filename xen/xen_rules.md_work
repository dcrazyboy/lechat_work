        meta iifname { "xenbr0", "xenbr1", "xenbr2", "xenbr3" } meta oifname "enp9s0" tcp dport { 80, 443 } accept
        meta iifname "enp9s0" meta oifname { "xenbr0", "xenbr1", "xenbr2", "xenbr3" } ct state established,related accept
